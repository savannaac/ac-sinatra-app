<link rel="stylesheet" href="stylesheets/signup.css">

<body>
    <div class="background" style="background-image: url('images/tent-hall-background.jpeg');">
        <div class="blinking-border">
            <center><h1>Sign Up</h1>
            <h2 style="font-size: 18px;">to get started or <a href="/login" style="color: #ffc105; text-decoration: none;">LOG IN</a></h2>

            <form action="/signup" method="post">
                <div class="image_container">
                    <img src="images/girl-avatar.png" alt="signup-image" style="width: 325px;">
                </div>

                <div class="container">
                    <input type="text" placeholder="Username" name="name" required><br>
                    <input type="email" placeholder="Email" name="email" required><br>
                    <input type="password" placeholder="Password" name="password" required>

                    <br><br><button type="submit"><b>SIGN UP</b></button>
                </div>
            </form></center>
        </div>
    </div>
</body>